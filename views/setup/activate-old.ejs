<html>

<head>
	<meta name="viewport" content="width=device-width, initial-scale=1">
	<meta http-equiv="Cache-Control" content="no-cache, no-store, must-revalidate" />
	<meta http-equiv="Pragma" content="no-cache" />
	<meta http-equiv="Expires" content="0" />
	<title>On Premise Activation</title>
	<style>
		/* Style all input fields */
		body {
			font-family: Arial, Helvetica, sans-serif;
			font-weight: normal;
		}

		.header {
			font-size: 25px;
			text-align: center;
			padding: 30px 0;
			color: #444;
		}

		.header-title {
			color: #1E1428;
			font-family: sans-serif;
			font-size: 18px;
			font-weight: 300;
			line-height: 25px;
			margin-top: 20px;
		}

		input {
			width: 100%;
			padding: 12px;
			border: 1px solid #ccc;
			border-radius: 4px;
			box-sizing: border-box;
			margin-top: 6px;
			margin-bottom: 16px;
		}

		/* Style the container for inputs */
		.container {
			background-color: #FFFFFF;
			padding: 20px;
			width: 480px;
			margin: 0 auto;
			border: 1px solid #ddd;
		}

		.wrapper {
			padding-top: 5%;
		}

		.parent {
			background-color: #F7F7F5;
			width: 100%;
			height: 100%;
		}

		#activationForm {
			padding: 0 40px;
		}
		.alert{
			color: red;
		}
		.form-group {
			margin: 40px 0 0;
		}
		.form-label {
			color: #626469;
			/* font-family: 'ciscoSans'; */
			font-size: 12px;
			font-weight: 300;
			line-height: 13px;
		}
		.custom-input {
			color: #000000;
			/* font-family: CiscoSans; */
			font-size: 14px;
			letter-spacing: 0.58px;
			line-height: 20px;
			padding: 6px;
			border: none;
			border-bottom: 1px solid #999;
			border-radius: 0;
			outline: none;
		}
		.custom-input:focus {
			border-color: #29CAC3;
		}
		.login-btn {
			border-radius: 4px;
			background-color: #29CAC3;
			color: #FFFFFF;
			/* font-family: CiscoSans; */
			font-size: 16px;
			font-weight: bold;
			line-height: 22px;
			text-align: center;
			padding: 18px;
			cursor: pointer;
			border-color: #29CAC3;
			margin-top: 20px;
		}
		
		.or-separator {
			margin: 30px 0;
			text-align: center;
			position: relative;
		}
		.or-text {
			color: #1E1428;
			/* font-family: CiscoSans; */
			font-size: 14px;
			font-weight: 300;
			line-height: 30px;
			text-align: center;
			width: 30px;
			height: 30px;
			background-color: #fff;
			z-index: 2;
		}
		
		.terms-title {
			color: #1E1428;
			/* font-family: CiscoSans; */
			font-size: 22px;
			font-weight: 300;
			line-height: 30px;
		}
		
		.hidden {
			opacity: 0;
			visibility: hidden;
			height: 0;
			overflow: hidden;
		}
		
	</style>
	<script language="JavaScript">
		function activateOnPremiseApp() {
			var activationKey = document.getElementById("activationKeyInput").value;
			if (activationKey == "") {
				alert("On Premise Activation Key should not be empty");
				return false;
			}
			var activationEle = document.getElementById('activationContainer');
			activationEle.classList.add('hidden');

			var activationKeyInput = document.getElementById("activationKeyInput").value;
			activationKeyInput = activationKeyInput.trim();

			var altActivationKey = document.getElementById("activationKey");
			altActivationKey.value = activationKeyInput;
			submitForm();
		}

		function submitForm() {
			var form = document.getElementById("activationForm");
			form.action = "/auth/validateOnPremiseApp";
			form.method = "post";
			form.submit();
		}

	</script>

</head>

<body>
	<header>
		<div class="parent">
			<div class="wrapper">
				<div class="container" id="activationContainer">
					<div class="header">
						<div class="header-image">
							<img src="/app.png" alt="App Logo"/>
						</div>
						<div class="header-title">
							Please Enter Activation Token
						</div>
					</div>
					<form id="activationForm" name="activationForm" onsubmit="return false">
						<div class="form-group">
							<label class="form-label" for="activationKeyInput">Activation Key</label>
							<input placeholder="Activation Token" class="custom-input" type="text" id="activationKeyInput" name="activationKeyInput">
						</div>
						
						<input type="hidden" id="activationKey" name="activationKey" />

						<input class="login-btn" type="submit" value="Activate App" onclick="activateOnPremiseApp()">

						<!-- show any messages that come back with authentication -->
    					<% if (message.length > 0) { %>
							<div id="errorMessage" class="alert"><%= message %></div>
						<% } %>
					</form>
				</div>
			</div>
		</div>
	</header>
</body>

</html>